<%= div_for(product, class: "[ square ][ border ][ columna xmall-6 ]") do %>
	<div class="[ product-image ][ thumbnail ]">
		<%= link_to product_image(product), product %>
	</div>
	<h4 class="[ text-center ]">
		<%= product.name %>
	</h4>
	<p class="[ text-center ]">de <a href="#">Paul</a></p>
	<p class="[ text-center ][  ]">
		<%= product.display_price %>
	</p>
	<%= form_for :order, :url => populate_orders_path do |f| %>
	    <%= hidden_field_tag :variant_id, product.master.id %>
	    <%= hidden_field_tag :quantity, 1 %>
	    <%= button_tag :id => 'add-to-cart-button', :class => '[ button button--small button--hollow ]', :type => :submit do %>
	      <%= content_tag(:i, '', :class => 'icon-plus') + " " + Spree.t(:add_to_cart) %>
	    <% end %>
		<a class="[ button button--small button--hollow ]" id="add-to-cart-button">
			agregar al carrito
		</a>
		<a class="[ button button--small button--highlight ]">
			1-click checkout
		</a>
	<% end %>
<% end %>


